<% if flash[:notice] %>
  <p><%= notice %></p>
<% end %>
<div class="container">
   <% if @createdbook.errors.any? %>
    <div id="error-explanation">
      <h3><%= @createdbook.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @createdbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% elsif @createdbook.errors.count == 1 %>
    <div id="error-explanation">
      <h3><%= @createdbook.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @createdbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="cpl-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
      <tbody>

        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class:'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label>Title</label>
            <%= f.text_field :title,class:'form-control' %>
        </div>
        <div class="form-group">
          <lavel>Opinion</lavel>
            <%= f.text_area :body, class:'form-control' %>
        </div>
        <div>
          <%= f.submit 'Create Book', class:'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do  %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>