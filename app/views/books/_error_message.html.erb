<% if resource.errors.count == 1 %>
      <div id="error-explanation">
        <h3><%= resource.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% elsif resource.errors.any? %>
      <div id="error-explanation">
        <h3><%= resource.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>