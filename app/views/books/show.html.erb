<div class="container">
  <div class="row">
    <div class="cpl-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
      <tbody>

        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
      </table>
      <div class="row">
        <%= link_to user_path(current_user.id), class:'btn btn-outline-secondary btn-block' do %>
          <i class="fa-solid fa-user-gear btn btn-outline-secondary btn-block"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label>Title</label>
            <%= f.text_field :title,class:'form-control' %>
        </div>
        <div class="form-group">
          <lavel>Opinion</lavel>
            <%= f.text_area :body, class:'form-control' %>
        </div>
        <div>
          <%= f.submit 'Create Book', class:'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @createdbooks.user.get_profile_image(100, 100) %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@createdbooks.id) do %>
                  <%= @createdbooks.title %>
                <% end %>
              </td>
              <td><%= @createdbooks.body %></td>
              <% if @user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path, class:'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "destroy", book_path(@createdbooks.id), method: :delete, "data-confirm" =>"本当に消しますか？",
                class:'btn btn-sm btn-danger' %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>